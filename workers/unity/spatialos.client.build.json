{
  "tasks": [
    {
      "name": "Codegen",
      "steps": [
        {
          "name": "Dependencies",
          "arguments": ["worker_package", "unpack"]
        },
        {
          "name": "C# standard library",
          "arguments": ["process_schema", "--cachePath=.spatialos/schema_codegen_cache_std", "--output=../../build/unity/Generated/Std", "--language=csharp_framework", "--intermediate_proto_dir=.spatialos/schema_codegen_proto_std", "--input=../../build/dependencies/schema/WorkerSdkSchema"]
        },
        {
          "name": "C#",
          "arguments": ["process_schema", "--cachePath=.spatialos/schema_codegen_cache_usr", "--output=../../build/unity/Generated/Usr", "--language=csharp_framework", "--intermediate_proto_dir=.spatialos/schema_codegen_proto_usr", "--input=../../schema", "--repository=../../build/dependencies/schema"]
        },
        {
          "name": "Compile generated scripts",
          "description": "Compiles the generated code into a single DLL for Unity to consume. Assumes the location of dependencies based on their location in the spatialos_worker.json",
          "arguments": ["invoke",
            "unity-csharp-compiler",
            "--recurse-references=Assets/Improbable/Dependencies/**/Improbable.*.dll",
            "--recurse-references=Assets/Improbable/Dependencies/protobuf-net.dll",
            "--",
            "-target:library",
            "-unsafe",
            "-recurse:../../build/unity/Generated/*.cs",
            "-out:Assets/Improbable/Dependencies/Generated.Code.dll"
            ]
        }
      ]
    },
    {
      "name": "Build",
      "steps": [
        {
          "name": "Codegen",
          "arguments": ["invoke-task", "Codegen"]
        },
        {
          "name": "Compile scripts",
          "description": "Unity doesn't load new scripts when asked to execute a method on the command line, so this ensures that new scripts are added before the next steps run.",
          "arguments": ["invoke", "unity"]
        },
        {
          "name": "UnityClient workers",
          "arguments": ["invoke", "unity", "Improbable.Unity.EditorTools.Build.SimpleBuildSystem.Build", "+buildWorkerTypes", "UnityClient"]
        }
      ]
    },
    {
      "name": "Clean",
      "steps": [
        {
          "name": "All Unity workers and prefabs",
          "arguments": ["invoke", "unity", "Improbable.Unity.EditorTools.Build.SimpleBuildSystem.Clean", "--allow_fail"]
        },
        {
          "name": "Dependencies",
          "arguments": ["worker_package", "clean"]
        },
        {
          "name": "Generated code",
          "arguments": ["process_schema", "clean", ".spatialos/schema_codegen_cache_usr", ".spatialos/schema_codegen_cache_std", ".spatialos/schema_codegen_proto_usr", ".spatialos/schema_codegen_proto_std", "../../build/unity/Generated", "Assets/Improbable/Dependencies/Generated.Code.dll", "--language=csharp_framework"]
        }
      ]
    }
  ]
}
